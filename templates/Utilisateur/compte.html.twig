{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block header %}
    <input type="button" class="button button-deconnexion" value="Retour" onclick="window.location.href='{{path('Menu')}}';">
    <h1 class="en-tete">Cherche et Trouve</h1>
    <input type="button" class="button button-deconnexion" value="Déconnexion" onclick="window.location.href='{{path('app_logout')}}';">
{% endblock %}

{% block body %}
<div class="div-center d-flex al-center">
    <div class="cadre al-center d-flex">
        <p>Niveau : {{ app.user.niveau }}</p>
        <p>Nombre de plante trouvé : {{plantes_comptes|length}}</p>
        <p>Photo de profil : <img class="icone" src="../../../../ImageProfil/{{ app.user.photo }}"></p>
        <p>Nom : {{ app.user.pseudo }}</p>
        <p>Email : {{ app.user.email }}</p>
        <input type="button" class="button" value="Modifier profil" onclick="window.location.href='{{path('compte-modifier')}}';">
        <input type="button" class="button" value="Modifier mot de passe" onclick="window.location.href='{{path('compte-modifier-mdp')}}';">
        <input type="button" class="button button-deconnexion" value="Effacer compte" onclick="window.location.href='{{path('compte-effacer')}}';">
    </div>
</div>
{% endblock %}