{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block header %}
    <input type="button" class="button button-deconnexion" value="Annuler" onclick="window.location.href='{{path('Admin-compte')}}';">
    <h1 class="en-tete">Créer un compte</h1>
    <input type="button" class="button button-deconnexion" value="Déconnexion" onclick="window.location.href='{{path('app_logout')}}';">
{% endblock %}

{% block body %}
    <div class="div-center d-flex al-center">
        <div class="cadre cadre-form cadre-user d-flex al-center">
            <h1>Créer un compte</h1>
            {{ form_start(form) }}
            <ul style="list-style-type: none">
                <li>
                    {{ form_row(form.email, {
                        label: 'Adresse mail : '
                    }) }}
                </li>
                <li>
                    {{ form_row(form.password, {
                        label: 'Mot de passe : '
                    }) }}
                </li>
                <li>
                    {{ form_row(form.pseudo, {
                        label: 'Nom : '
                    }) }}
                </li>
                <li>
                    {{ form_row(form.photo, {
                        label: 'Photo de profil : '
                    }) }}
                </li>

                <button type="submit" class="button">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
